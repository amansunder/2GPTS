generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  gpts      GPT[]    @relation("UserGpts")
  createdAt DateTime @default(now())
  role      Role     @default(END_USER)
}

model GPT {
  id             String   @id @default(cuid())
  name           String
  description    String
  systemPrompt   String
  isPremium      Boolean
  category       String
  modelProvider  String
  thumbnail      String

  createdById    String
  createdBy      User     @relation("UserGpts", fields: [createdById], references: [id])
}

enum Role {
  END_USER
  SUBSCRIBER
  ADMIN
  SUPER_ADMIN
}
